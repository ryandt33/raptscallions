{
  "name": "@raptscallions/docs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run copy:backlog && vitepress dev src",
    "build": "npm run copy:backlog && vitepress build src",
    "preview": "vitepress preview src",
    "copy:backlog": "rm -rf src/backlog && cp -r ../../backlog src/backlog",
    "clean": "rm -rf src/.vitepress/dist src/.vitepress/cache src/backlog dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "vitepress": "^1.5.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/yargs": "^17.0.35",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "typescript": "^5.3.0",
    "yargs": "^18.0.0"
  }
}
